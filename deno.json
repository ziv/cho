{
  "tasks": {
    "test": "deno test --allow-env",
    "docs": "./scripts/docs.sh",
    "dev": "deno run --watch main.ts"
  },
  "workspace": [
    "./command",
    "./core",
    "./dev",
    "./web",
    "./vendor/hono"
  ],
  "imports": {
    "@chojs/core": "./core/mod.ts",
    "@chojs/core/di": "./core/di/mod.ts",
    "@chojs/core/meta": "./core/meta/mod.ts",
    "@chojs/core/utils": "./core/utils/mod.ts",
    "@chojs/dev": "./dev/mod.ts",
    "@chojs/vendor-hono": "./vendor/hono/mod.ts",
    "@chojs/web": "./web/mod.ts",
    "@std/cli": "jsr:@std/cli@^1.0.22",
    "@std/datetime": "jsr:@std/datetime@^0.225.5",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/semver": "jsr:@std/semver@^1.0.5",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "hono": "jsr:@hono/hono@^4.9.4",
    "mongodb": "npm:mongodb@^6.18.0"
  },
  "fmt": {
    "lineWidth": 80,
    "exclude": [
      "docs/**",
      "node_modules/**"
    ]
  }
}
